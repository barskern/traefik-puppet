[Unit]
Description=Traefik
Wants=basic.target
After=basic.target network.target

[Service]
ExecStart=/opt/<%= scope.lookupvar("traefik::package_name") %>/<%= scope.lookupvar("traefik::package_name") %> --configfile <%= scope.lookupvar("traefik::config_file_path") %>
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
